<!-- TITLE DESCRIPTION PAGE PRODUCT FOCUS -->
<section class="bg-pumpkin-dark py-4">
    <div class="lg:px-32 px-6 py-12 container lg:mx-32 bg-pearl">
        <a href="{{ path('app_front_product_list') }}" class="my-4 lg:text-lg text-m font-bold bg-leaf text-pearl p-2 rounded-lg hover:ring-2 ring-pumpkin hover:bg-farm-blue"> Retour </a>
        <h2 class="lg:text-5xl text-3xl text-center font-title text-leaf text-bold my-3">{{ product.name }}</h2>
        <div class="flex flex-col items-center lg:flex-row">
            <img  src="{{ product.picture }}" class=" w-40 h-40 lg:w-80 lg:h-80 mx-6 lg:float-left" alt="Image représentant des Potimarrons, ronds et orangés"> </img>
            <div class="flex flex-col justify-between">
                <p class="mt-10 lg:text-xl text-md leading-2 text-farm-blue"> {{ product.description }}</p> 
                <div class="flex flex-row gap-1 flex-wrap lg:justify-between">
                    <p class="mt-5 font-bold text-2xl  text-farm-blue"> {{ product.price |format_currency('EUR', locale='fr')}}/la pièce</p>
                    <button class="flex self-stretch justify-center mt-1 lg:text-xl text-m font-bold bg-pumpkin-btn text-pearl p-3 rounded-lg hover:ring-4 ring-pumpkin hover:bg-farm-blue"> <i class="fa-solid fa-cart-shopping self-center me-4"></i> Ajouter au panier</button> <!-- Add to cart button -->
                </div>
            </div>   
        </div>
    </div>
</section>

{% endblock %}